{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "dist",
    "target": "es6",
    "lib": [
      "ES2016",
      "DOM",
      "ES2017",
      "ES2019"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@tymona/*": ["packages/*"]
    },
    "typeRoots": ["typings", "node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "exclude": []
}
